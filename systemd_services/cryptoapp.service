[Unit]
Description=Flask App purchase crypto with Gunicorn
After=network.target

[Service]
User=pi
WorkingDirectory=/home/ansible/crypto-tracker
ExecStart=/home/ansible/crypto-tracker/.local/bin/poetry run gunicorn crypto_tracker.app:app --bind 0.0.0.0:8000
Restart=always

[Install]
WantedBy=multi-user.target